<h1> <%= @merchant.name %></h1>

<section id="bulk_discounts">
<h3> All Bulk Discounts: </h3>
<% @bulk_discounts.each do |discount| %>
<ul>
  <section id="bulk_discount-<%=discount.id%>">
    <li><%= link_to "#{discount.name}", merchant_bulk_discount_path(@merchant, discount) %></li>
    <ul>
      <li><%= "#{discount.percentage_discount}% Discount" %></li>
      <li>Quantity Threshold: <%= discount.quantity_threshold %></li>
      <li><%=link_to "Delete Discount", merchant_bulk_discount_path(@merchant, discount), method: :DELETE %></li>
    </ul>
  </section>
</ul>

<% end %>
</section>
<p><%=link_to "Create New Discount", new_merchant_bulk_discount_path(@merchant) %></p>

<section id="holidays">
  <h3> Upcoming Holidays </h3>
  <% @holidays.each do |holiday| %>
  <ul>
    <li> <%= holiday.name %></li>
    <ul>
      <li>   <%= holiday.date %> </li>
    </ul>
  </ul>
  <% end %>

</section>
